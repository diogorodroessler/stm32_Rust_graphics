{
    "version": "2.0.0",
"tasks": [
    {
        "label": "Cargo build",
        "type": "shell",
        "command": "cargo",
        "args": ["build"],
        "problemMatcher": [
            "$rustc"
        ],
        "group": "build"
    },
    {
        "label": "Build binary",
        "type": "shell",
        "command": "arm-none-eabi-objcopy",
        "args": [
            "--output-target", "binary",
            "target/thumbv7m-none-eabi/debug/${workspaceFolderBasename}",
            "main.bin",
        ],
        "problemMatcher": [
            "$rustc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "dependsOn": "Cargo build"
    }
]
}
